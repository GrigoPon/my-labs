<Window x:Class="Wpf_lab7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_lab7"
        mc:Ignorable="d"
        Title="Поняев Григорий Л7" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/peizazh-windows-windows-xp-pole-trava-nebo-gennadii-gorin-ge.jpg" Stretch="UniformToFill" TileMode="None" Opacity="1"/>
        </Grid.Background>
        <Label x:Name="hello" Content="ПРИВЕТ" HorizontalAlignment="Left" Margin="347,74,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Arial Rounded MT Bold" FontWeight="Bold"/>
        <Rectangle x:Name="rectangle" HorizontalAlignment="Left" Height="148" Margin="271,18,0,0" Stroke="Black" VerticalAlignment="Top" Width="227" Fill="White" MouseWheel="rectangle_MouseWheel"/>
        <ScrollBar x:Name="scroll" HorizontalAlignment="Left" Height="148" Margin="523,18,0,0" VerticalAlignment="Top" Width="4" Scroll="ScrollBar_Scroll"/>
        <TextBlock x:Name="red" HorizontalAlignment="Left" Margin="234,181,0,0" TextWrapping="Wrap" Text="Red.v" VerticalAlignment="Top" FontSize="14" Foreground="Red" FontFamily="Arial Rounded MT Bold"/>
        <TextBlock x:Name="green" HorizontalAlignment="Left" Margin="359,181,0,0" TextWrapping="Wrap" Text="Green.v" VerticalAlignment="Top" FontSize="14" Foreground="#FF00C30C" FontFamily="Arial Rounded MT Bold"/>
        <TextBlock x:Name="blue" HorizontalAlignment="Left" Margin="489,181,0,0" TextWrapping="Wrap" Text="Blue.v" VerticalAlignment="Top" FontSize="14" Foreground="#FF0004FF" FontFamily="Arial Rounded MT Bold"/>
        <TextBox x:Name="red_val" HorizontalAlignment="Left" Height="20" Margin="234,202,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="35"/>
        <TextBox x:Name="green_val" HorizontalAlignment="Left" Height="20" Margin="369,202,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="35"/>
        <TextBox x:Name="blue_val" HorizontalAlignment="Left" Height="20" Margin="493,202,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="35"/>
        <Slider x:Name="red_balance" HorizontalAlignment="Left" Height="29" Margin="234,230,0,0" VerticalAlignment="Top" Width="300" FontSize="14" Maximum="255" TickPlacement="BottomRight" LargeChange="25" SmallChange="25" TickFrequency="25" Foreground="Black" ValueChanged="red_balance_ValueChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="216,230,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="539,230,0,0" TextWrapping="Wrap" Text="255" VerticalAlignment="Top" FontSize="14"/>
        <ScrollBar x:Name="green_balance" HorizontalAlignment="Left" Height="14" Margin="234,277,0,0" VerticalAlignment="Top" Width="300" Maximum="255" SmallChange="1" Orientation="Horizontal" ValueChanged="green_balance_ValueChanged" Value="-2" LargeChange="5"/>
        <ScrollBar x:Name="blue_balance" HorizontalAlignment="Left" Height="14" Margin="234,318,0,0" VerticalAlignment="Top" Width="300" Maximum="255" SmallChange="1" Orientation="Horizontal" ValueChanged="blue_balance_ValueChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="216,276,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="216,317,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="539,276,0,0" TextWrapping="Wrap" Text="255" VerticalAlignment="Top" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="539,317,0,0" TextWrapping="Wrap" Text="255" VerticalAlignment="Top" FontSize="14"/>
        <TextBlock x:Name="red_Копировать" HorizontalAlignment="Left" Margin="167,231,0,0" TextWrapping="Wrap" Text="Red" VerticalAlignment="Top" FontSize="14" Foreground="Red" FontFamily="Arial Rounded MT Bold"/>
        <TextBlock x:Name="green_Копировать" HorizontalAlignment="Left" Margin="152,277,0,0" TextWrapping="Wrap" Text="Green" VerticalAlignment="Top" FontSize="14" Foreground="#FF00C30C" FontFamily="Arial Rounded MT Bold"/>
        <TextBlock x:Name="blue_Копировать" HorizontalAlignment="Left" Margin="163,318,0,0" TextWrapping="Wrap" Text="Blue" VerticalAlignment="Top" FontSize="14" Foreground="#FF0004FF" FontFamily="Arial Rounded MT Bold"/>
        <Button x:Name="Randomizer" Content="Рандомный сетап" HorizontalAlignment="Left" Height="25" Margin="286,353,0,0" VerticalAlignment="Top" Width="202" Click="Randomizer_Click"/>
        <TextBlock x:Name="attempt" HorizontalAlignment="Left" Margin="332,383,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="11" Foreground="Red"/>

    </Grid>
</Window>
