<Window x:Name="L3" x:Class="Wpf_L3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_L3"
        mc:Ignorable="d"
        Title="Поняев Григорий №3" Height="450" Width="800">
    <Grid>
        <Label x:Name="Krest" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Height="31" Width="25"/>
        <Button x:Name="up" Content="Вверх" HorizontalAlignment="Left" Margin="519,123,0,0" VerticalAlignment="Top" Width="80" Height="40" Click="up_Click"/>
        <Button x:Name="info" Content="ИНФО" HorizontalAlignment="Left" Margin="519,168,0,0" VerticalAlignment="Top" Width="80" Height="40" Click="info_Click"/>
        <Button x:Name="down" Content="Вниз" HorizontalAlignment="Left" Margin="519,213,0,0" VerticalAlignment="Top" Width="80" Height="40" Click="down_Click"/>
        <Button x:Name="left" Content="Влево" HorizontalAlignment="Left" Margin="434,168,0,0" VerticalAlignment="Top" Width="80" Height="40" Click="left_Click"/>
        <Button x:Name="right" Content="Вправо" HorizontalAlignment="Left" Margin="604,168,0,0" VerticalAlignment="Top" Width="80" Height="40" Click="right_Click"/>
        <Button Content="Сбросить" HorizontalAlignment="Left" Margin="519,343,0,0" VerticalAlignment="Top" Width="80" Height="40" Click="Button_Click"/>

    </Grid>
</Window>
